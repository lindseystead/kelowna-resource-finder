
# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/kelowna_aid

# Server Configuration
PORT=5000
NODE_ENV=development

# Session Security (REQUIRED)
SESSION_SECRET=your-secure-random-session-secret-min-32-characters

# OpenAI (OPTIONAL)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# SMTP Email (OPTIONAL)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="Help Kelowna" <your-email@gmail.com>

# Support Email (OPTIONAL)
SUPPORT_EMAIL=support@lifesavertech.ca

# CORS (OPTIONAL)
ALLOWED_ORIGINS=http://localhost:5000,https://helpkelowna.com

# Base URL (OPTIONAL)
BASE_URL=https://helpkelowna.com